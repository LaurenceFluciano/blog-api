{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
    	"esModuleInterop": true,
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "dist",
		"typeRoots": [ 
			"./node_modules/@types",
      		"./@types"
		]
	}, 
	"include": ["src/**/*", "@types/**/*"]
}